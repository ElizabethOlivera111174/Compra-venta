@using PowerAutomate.Core
@model Clientes

<form asp-action= "Guardar" asp_controller= "Clientes" method="post">
    <div class= "row">
        <input type= "hidden" asp-for="IdCliente">
        <div class="form-group col">
            <label>Nombre</label>
            <input type="text" asp-for="Nombre" class="form-control">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="form-group col">
            <label>Dni</label>
            <input type="text" asp-for="Dni" class="form-control">
            <span asp-validation-for="Dni"></span>
        </div>
        <div class="form-group col">
            <label>Correo</label>
            <input type="text" asp-for="Correo" class="form-control">
            <span asp-validation-for="Correo"></span>
        </div>
        <div class="row py-2">
            <div class="form-group col">
                <button type="submit" class="btn btn-primary">@(Model.IdCliente > 0 ? "Actualizar" : "Guardar")</button>
            </div>
        </div>
       
    </div>

</form>